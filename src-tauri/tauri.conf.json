{
  "productName": "MyDistinctAI",
  "version": "0.1.0",
  "identifier": "com.mydistinctai.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:4000"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MyDistinctAI",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1024,
        "minHeight": 600,
        "url": "http://localhost:4000/desktop-startup"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' http://localhost:11434 ws://localhost:*; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../scripts/start-server.js",
      "../package.json",
      "../next.config.js",
      "../.env.local"
    ],
    "copyright": "Copyright 2025 MyDistinctAI. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Your private AI studio - offline, encrypted, and trained on you",
    "longDescription": "MyDistinctAI is a desktop application that lets you build and train custom AI models completely offline. All data stays on your device, encrypted with AES-256. Features include local embeddings generation, RAG capabilities, and support for PDF/DOCX/TXT files.",
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US"],
        "template": null
      },
      "nsis": null
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "hardenedRuntime": true,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": [],
        "files": {}
      },
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    }
  },
  "plugins": {}
}
